# name: test/sql/metastore/generic/auth_errors.test
# description: verify auth error messages are actionable and mention the missing option
# group: [sql]

require metastore

# ---- Missing PROVIDER option ----
statement ok
ATTACH 'metastore_db' AS ms (TYPE metastore);

# ---- Unrecognized PROVIDER value ----
statement error
ATTACH 'metastore_db' AS ms2 (TYPE metastore, PROVIDER 'unknown_provider');
----
Supported providers

# ---- HMS: missing ENDPOINT ----
statement error
ATTACH 'metastore_db' AS ms3 (TYPE metastore, PROVIDER 'hms');
----
ENDPOINT

# ---- Glue: missing REGION ----
statement error
ATTACH 'metastore_db' AS ms4 (TYPE metastore, PROVIDER 'glue');
----
REGION
